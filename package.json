{
  "name": "com.melcloud.optimize",
  "version": "14.0.1",
  "description": "Optimize your MELCloud heat pump based on electricity prices and weather",
  "main": "index.js",
  "scripts": {
    "build": "tsc && homey app build",
    "build:ts": "tsc",
    "build:homey": "homey app build",
    "start": "homey app run",
    "lint": "tsc --noEmit",
    "dev": "homey app run --debug",
    "test": "jest",
    "test:unit": "jest --config jest.config.unit.js",
    "test:unit:ci": "jest --config jest.config.unit.js --runInBand",
    "test:full": "jest --config jest.config.js",
    "test:integration": "jest test/integration/",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "clean": "rm -rf .homeybuild coverage results",
    "simulate": "npm run build:ts && node .homeybuild/scripts/simulate.js --data data/timeseries.csv --config data/config.yaml --output results/",
    "gen:scenarios": "tsc -p tsconfig.fixtures.json && node .homeybuild/test/fixtures/generate-scenarios.js",
    "validate": "homey app validate",
    "homey:install": "homey app install"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/jsdom": "^27.0.0",
    "@types/node-fetch": "^2.6.11",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "cron": "^3.1.7",
    "fast-xml-parser": "^4.5.1",
    "jsdom": "^27.0.0",
    "luxon": "^3.4.4",
    "moment-timezone": "^0.5.47",
    "node-fetch": "^2.7.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
