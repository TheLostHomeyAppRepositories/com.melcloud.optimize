{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "outDir": ".homeybuild",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": false,
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  },
  "include": [
    "src/**/*",
    "index.ts",
    "drivers/**/*",
    "api.ts",
    "timeline-helper-wrapper.ts",
    "weather.ts",
    "services/**/*.ts",
    "simulate.ts",
    "scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "test",
    "coverage",
    ".homeybuild",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
